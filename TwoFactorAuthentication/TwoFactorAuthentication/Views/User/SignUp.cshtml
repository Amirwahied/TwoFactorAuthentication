@section scripts
    {
    <script>
        function validateForm() {
            var username = document.getElementById("Username").value;
            var password = document.getElementById("Password").value;

            //Username should not be empty
            if (username.trim() === "") {
                alert("Please enter a username.");
                return;
            }

            // Username validation (no space  at least 4 characters)
            var usernameRegex = /^(?!.*\s).{4,}$/;
            if (!usernameRegex.test(username)) {
                alert("Username must be at least 4 characters long and cannot contain spaces.");
                return;
            }

            //Password should not be empty
            if (password.trim() === "") {
                alert("Please enter a password.");
                return;
            }

            //Password Validation at least(8 characters - one digit - one upper case - one lower case - one special character)
            var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$/;
            if (!passwordRegex.test(password)) {
                alert("Password must be at least 8 characters long and contain at least one uppercase letter, one lowercase letter, one digit, and one special character.");
                return;
            }


            //Continue Process
            document.getElementById("signupForm").submit();
        }
    </script>
